{
  "name": "purify-ts",
  "version": "0.16.0-beta.5",
  "description": "Functional programming standard library for TypeScript ",
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./EitherAsync": "./lib/EitherAsync.js"
  },
  "types": "lib/index.d.ts",
  "repository": "https://github.com/gigobyte/purify.git",
  "author": "gigobyte <gigobest2@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "tsc && tsc -p tsconfig.es.json",
    "docs": "typedoc --out documentation/ src/ --theme minimal",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "src/.+\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "jest": "26.4.2",
    "prettier": "^2.0.1",
    "ts-jest": "26.4.0",
    "typescript": "4.0.3"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.4"
  }
}
